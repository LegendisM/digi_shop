<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>فروشگاه محصولات آموزشی</title>
    <link rel="stylesheet" href="packages/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.style.css">
    <link rel="stylesheet" href="css/modal.style.css">
</head>

<body>
    <div class="container-fluid g-0">
        <%- include("includes/header.view.ejs") -%>

            <main id="products" class="p-3">
                <h3>محصولات ویژه</h3>
                <section class="row justify-content-evenly">
                    <% products.forEach((product)=> { %>
                        <article class="col-auto mt-2">
                            <img src="assets/images/products/graphic_book.jpg" alt="">
                            <center class="pt-2">
                                <h4>
                                    <%= product.name %>
                                </h4>
                            </center>
                        </article>
                        <% }) %>
                </section>
                <br>
                <h3>محصولات جدید</h3>
                <section class="row justify-content-evenly">
                    <% products.forEach((product)=> { %>
                        <article class="col-auto mt-2">
                            <img src="assets/images/products/graphic_book.jpg" alt="">
                            <center class="pt-2">
                                <h4>
                                    <%= product.name %>
                                </h4>
                            </center>
                        </article>
                        <% }) %>
                </section>
                <br>
            </main>

            <%- include("includes/footer.view.ejs") -%>

                <div id="accountModal" class="modal row">
                    <div class="modal-content col-auto">
                        <h2>حساب کاربری</h2>
                        <div>
                            <input type="text" name="username" id="username" placeholder="نام کاربری">
                            <input type="password" name="password" id="password" placeholder="رمز عبور">
                            <button type="submit">ورود</button>
                        </div>
                    </div>
                </div>

                <div id="cartModal" class="modal">
                    <div class="modal-content">
                        <h2>سبد خرید</h2>
                        <div class="cart-box">
                            <article>
                                <img src="assets/images/products/graphic_book.jpg" alt="">
                                <h4>آموزش فتوشاپ 1</h4>
                                <button>حذف</button>
                            </article>
                            <article>
                                <img src="assets/images/products/graphic_book.jpg" alt="">
                                <h4>آموزش فتوشاپ 2</h4>
                                <button>حذف</button>
                            </article>
                            <article>
                                <img src="assets/images/products/coffe.jpg" alt="">
                                <h4>آموزش تولید قهوه</h4>
                                <button>حذف</button>
                            </article>
                            <br>
                            <button>تکمیل سبد خرید</button>
                        </div>
                    </div>
                </div>
    </div>

    <script src="js/script.js"></script>
    <script src="js/modal.js"></script>
    <script src="packages/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>